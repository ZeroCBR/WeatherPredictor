<h2>Data by Location</h2>
<br>
<h4>Location: <%= @loc_name%></h4>

<% if @hash_by_loc != {} %>

<h4>Date: <%= @hash_by_loc["date"] %></h4>
<h4>current_temp: <%= @hash_by_loc["current_temp"] %></h4>
<h4>current_cond: <%= @hash_by_loc["current_cond"] %></h4>

<table class="table table-hover">
	<thead>
		<tr>
			<th>Time</th>
			<th>Temp</th>
			<th>Precip</th>
			<th>Wind Direction</th>
			<th>Wind Speed</th>
			<th colspan="3"></th>
		</tr>

		<tbody>
		<% @hash_by_loc["measurements"].each do |record| %>
		<tr>
			<td><%= record["time"] %></td>
			<td><%=	record["temp"] %></td>
			<td><%= record["precip"] %></td>
			<td><%= record["wind_direction"] %></td>
			<td><%= record["wind_speed"] %></td>
		</tr>
		<% end %>

	</thead>

</table>
<% else %>
<br>
<h4>This location does not exist!</h4>
<% end %>
